<%- include('nav.ejs'); %>
<div class="container">
    <h1>Courses</h1>
    <ul class="list-group">
        <% countCourse.forEach((cr, index) => { %> 
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span><%= index + 1 %>. </span>
                <a href="/courses/<%= cr._id %>"><%= cr.course %></a>
                <span class="badge badge-pill" style="padding:7px !important">
                    <%= cr.start.toDateString() %>
                </span>
            </li>
        <% }) %>
    </ul>
</div>